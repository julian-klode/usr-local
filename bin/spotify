#!/bin/bash
#
# Start spotify with the following tricks:
#
#  - Hide output, so journald does not go crazy
#  - Apply _GTK_THEME_VARIANT dark, so the title bar color is black

exec 0>&-
exec 1>&-
exec 2>&-

/usr/bin/spotify "$@" &>/dev/null &

while ! xprop -f _GTK_THEME_VARIANT 8u -set _GTK_THEME_VARIANT "dark" -name "Spotify"; do
	sleep 0.1;
done
