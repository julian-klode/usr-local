#!/bin/sh
#
# Automatic multi-profile borg backup script

do_create() {
    local archive="$archive_prefix$archive_suffix"

    args=""
    if tty -s; then
        args=" --progress"
    fi
    borg create $args --one-file-system  \
                 --exclude-caches  \
                 --info \
                 --stats \
                 ${create_policy} \
                 $location::${archive}  ${create_sources}
}

do_prune() {
    borg prune --info --list --stats $prune_policy --prefix "$archive_prefix" $location "$@"
    borg compact $location
}

do_list() {
    if [ -z "$1" ]; then
        borg list ${location}
    else
        borg list ${location}::$1
    fi
}

do_info() {
    if [ -z "$1" ]; then
        borg info $location
    else
        borg info $location::$1
    fi
}

do_cron() {
    do_create
    do_prune
}

do_diff() {
    args=""
    while echo "$1" | grep -q "^--"; do
        args="$args $1"
        shift
    done
    borg diff $args $location::$1 $2
}

do_delete() {
    args=""
    while echo "$1" | grep -q "^--"; do
        args="$args $1"
        shift
    done

    borg delete "$location::$1"
}

do_break_lock() {
    borg break-lock "$location"
}

main() {
    local profile="$1"
    local command="$2"

    shift 2

    . "$HOME/.config/borg/$profile.conf"

    do_${command} "$@"
}

main "$@"
